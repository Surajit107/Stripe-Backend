# Use Node.js 18 Alpine as base image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies for development)
RUN npm ci

# Create src directory for volume mounting
RUN mkdir -p src

# Expose port 5000
EXPOSE 5000

# Start the development server with nodemon
CMD ["npm", "run", "dev"] 